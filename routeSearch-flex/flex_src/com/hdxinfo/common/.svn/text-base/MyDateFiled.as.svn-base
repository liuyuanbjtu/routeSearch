package cn.com.common{import mx.collections.ArrayCollection;
import mx.containers.HBox;
import mx.controls.Label;
import mx.controls.NumericStepper;


public class MyDateFiled extends HBox{
	public function  MyDateFiled(){		super() ;	}		// Declare two variables for the component children.private var shi_mc:NumericStepper;private var fen_mc:NumericStepper;private var miao_mc:NumericStepper;private var lab_mc:Label  ;override protected function createChildren():void {    // Call the createChildren() method of the superclass.    super.createChildren();    // Test for the existence of the children before creating them.    // This is optional, but do this so a subclass can create a different    // child.    if (!shi_mc){        shi_mc = new NumericStepper();        lab_mc = new Label() ;        shi_mc.minimum = 0;        shi_mc.maximum = 23;        shi_mc.width = 45 ;         lab_mc.text  = ":" ;        lab_mc.width = 7 ;        addChild(shi_mc);        addChild(lab_mc);            }    if (!fen_mc)     {             fen_mc = new NumericStepper();        lab_mc = new Label() ;        fen_mc.minimum = 0;        fen_mc.maximum = 59;        fen_mc.width = 45 ;        addChild(fen_mc);        lab_mc.text  = ":" ;        lab_mc.width = 7 ;        addChild(lab_mc);            }    if(!miao_mc){    	miao_mc = new NumericStepper() ;    	miao_mc.minimum = 0 ;    	miao_mc.maximum = 59;         miao_mc.width = 45 ;    	addChild(miao_mc) ;    }}override protected function commitProperties():void{	} private function getstring():ArrayCollection{ var arr:ArrayCollection = new ArrayCollection() ; var hour_mc:String = this.shi_mc.value.toString() ; var minu_mc:String = this.fen_mc.value.toString() ; var secd_mc:String = this.miao_mc.value.toString() ; arr.addItem(hour_mc) ; arr.addItem(minu_mc) ; arr.addItem(secd_mc) ; return arr ;}}}